    <form action="" onsubmit="onSubmit()">
    <table cellspacing = "10" cellpadding="8">
        <tr>
            <td class="odd" onmousedown="onMouseDown()">Mouse Down</td>
            <td> <div onmousemove="onMousemove()">Move the cursor over me</div ></td>
            <td class="odd" >
                <button onmouseout="mouseOutEvent()">Mouse Out</button>
            </td>
            <td>
                <button onclick="OnclickEvent()">On Click</button>
            </td>
            <td class="odd" >
                <button ondblclick="ondblclick()" >On Double Click</button>
            </td>
            <td>On Blur <input type="text" size="8" id="blur"  onblur="blurFunction()" ></td>
        </tr>

        <tr>
            <td> On Focus <input type="text" size="8" id="focus" onfocus="focusFunction()"></td>
            <td class="even" onmouseup="onMouseUp()"> Mouse Up</td>
            <td><input type="text" onkeydown="onKeyDown()"> Enter anthing - Key Down</td>
            <td class="even" id="over" ><img onmouseover="bigImg(this)" onmouseout="normalImg(this)" src="./smiley.gif" alt="Smiley" width="32" height="32"></td>
            <td><input type="text" onkeypress="onKeyPess()"> Enter anthing - Key Press</td>
            <td class="even">
                Enter anthing - Key Up: <input type="text" id="keyup" onkeyup="onKeyUp()"></td>
        </tr>
        <tr>
            <td class="odd">
              On Change Event  <input type="text" id="beforechange" onchange="onChange()">
              <p id="onchange"></p>
            </td>
            <td>On Input Event  <input type="text" id="beforeinput" oninput="onInput()">
                <p id="oninput"></p></td>
            <td class="odd">Select some of the text: <input type="text" value="Hello world!" onselect="onSelect()"></td>
            <td><img src="./image.gif" onerror="onError()"></td>
            <td class="odd"> <p id="demo">onOnline and onOffline</p></td>
            <td><p id="resize">Resize -Executed the script when the window is resized.</p></td>
        </tr>

        <tr>
            <td><div id="wheels" style="border:1px solid black">
                <p>Roll the mouse wheel over me!</p>
                </div></td>
            <td class="even"><input type="text" oncopy="onCopy()" value="Try to copy me"><p id="copy"></p></td>
            <td><input type="text" onpaste="onPaste()" value="Paste something here" size="40">
                <p id="paste"></p></td>
            <td class="even"><input type="text" oncopy="onCut()" value="Try to cut me">
                <p id="cut"></p>
            </td>
            <td><video controls oncanplay="onPlay()"onended="onEnded()">
                <source src="./mov_bbb.mp4" type="video/mp4">
                <source src="./mov_bbb.ogg" type="video/ogg">
                Your browser does not support HTML5 video.
              </video>
              <p id="play"></p>
             

              </td>
            <td class="even"><video controls onended="onEnded()">
                <source src="./mov_bbb.mp4" type="video/mp4">
                <source src="./mov_bbb.ogg" type="video/ogg">
                Your browser does not support HTML5 video.
              </video>
              <p id="ended"></p></td>
        </tr>

        <tr>
            <td> 

                <video controls onplaying="onPlaying()">
                  <source src="./movie.mp4" type="video/mp4">
                  <source src="./movie.ogg" type="video/ogg">
                  Your browser does not support the video tag.
                </video>
                
                <p id="playing"></p></td>
            <td class="even"></td>
