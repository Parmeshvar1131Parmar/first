<script>
    // this.innerHTML = 'Oooops!!'"

    function mouseOutEvent(){
        alert("occurs when mouse is moved out from an element (after moved over)..")
        let x = document.getElementById("over");
        x.style.color="red"
    }
    function OnclickEvent(){
        alert("occurs when element is clicked.")
    }

    function ondblclick(){
        alert("occurs when element is double-clicked.")
    }

    function focusFunction() {
        document.getElementById("focus").style.background = "yellow";
        alert("Trigger an event when the element gets focused. ");
    }

    function blurFunction(){
        let x = document.getElementById("blur");
        x.value = x.value.toUpperCase();
        alert("occurs when form looses the focus from an element.");
    }
    function onSubmit(){
        alert("occurs when form is submitted.");
    }
    function onMouseOver(){
        alert("occurs when mouse is moved over an element.");
        let x = document.getElementById("over");
        x.style.color="blue"
    }
    function onMouseDown(){
        alert("occurs when mouse button is pressed over an element.")
    }
    function onMouseUp(){
        alert("occurs when mouse is released from an element (after mouse is pressed).")
    }
    function onLoad(){
        alert("occurs when document, object or frameset is loaded.")
    }
    function onScroll(){
        alert("occurs when document is scrolled.")
    }
    function onUnLoad(){
        alert("occurs when body or frameset is unloaded.")
    }
    function onReset(){
        alert("occurs when form is reset.")
    }
    function onKeyDown(){
        alert("occurs when key is being pressed.")
    }
    function onKeyPess(){
        alert("occurs when user presses the key.")
    }
    function onKeyUp(){
        alert("	occurs when key is released.");
        let x = document.getElementById("keyup");
  x.value = x.value.toUpperCase();
    }

    function onMousemove(){
        alert("The onmousemove event occurs when the pointer moves over an element.");
    }

    function onChange(){
        alert("Executed the script when the value of the element is changed.");
        var x = document.getElementById("beforechange").value;
        document.getElementById("onchange").innerHTML = "You typed: " + x;
    }

    function onInput(){
        alert("Trigger an event when the element gets focused. ");
        var x = document.getElementById("beforeinput").value;
        document.getElementById("oninput").innerHTML = "You typed: " + x;
    }

    function onInvalid(){
        alert("Executed the script when the element does not satisfy its predefined constraints.")
    }

    function bigImg(x) {
        x.style.height = "64px";
        x.style.width = "64px";
    }

    function normalImg(x) {
        x.style.height = "32px";
        x.style.width = "32px";
    }

    function onSelect(){
        alert("Triggers the event when the user has selected some text.")
    }

    function onError() {
        alert('The image could not be loaded.');
    }
    function onOnline() {
        document.getElementById("demo").innerHTML = "Your browser is working online.";
    }

    function onOffline() {
        document.getElementById("demo").innerHTML = "Your browser is working offline.";
    }

    function onResize() {
        let w = window.outerWidth;
        let h = window.outerHeight;
        let txt = "Window size: width=" + w + ", height=" + h;
        document.getElementById("resize").innerHTML = txt;
    }

    document.getElementById("wheels").addEventListener("wheel", myFunction);

    function myFunction() {
        this.style.fontSize = "20px";
    }

    function onCopy() {
        document.getElementById("copy").innerHTML = "You copied text!"
    }  
    function onPaste() {
        document.getElementById("paste").innerHTML = "You pasted text!";
    } 
    function onCut() {
        document.getElementById("cut").innerHTML = "You cut text!";
    }  
    function onPlay() {
        document.getElementById("play").innerHTML = "Can start playing video.";
    }

    function onEnded() {
        document.getElementById("ended").innerHTML = "The video has ended";
    }

 
    function onPlaying() {
        document.getElementById("playing").innerHTML += "The video is playing. ";
    }

</script>